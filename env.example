# Database Configuration
DB_URI=mongodb://localhost:27017/business_platform

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars_long
JWT_SECRET_KEY_ADMIN=your_admin_jwt_secret_key_here_min_32_chars_long
JWT_SECRET_KEY_BUSINESS=your_business_jwt_secret_key_here_min_32_chars_long
JWT_EXPIRES_IN=24h
JWT_EXPIRES_IN_ADMIN=24h
JWT_EXPIRES_IN_BUSINESS=24h

# Server Configuration
PORT=3000
SERVER_IP=localhost

# SendGrid Configuration (for email sending)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_EMAIL_SEND_FROM=your_verified_sender_email@yourdomain.com

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Nodemailer Configuration (alternative email service)
NODEMAILER_EMAIL=your_email@gmail.com
NODEMAILER_APP_PASSWORD=your_app_password_here

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
